<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF4500</item>
        <item name="colorPrimaryDark">#FF0000</item>
        <item name="colorAccent">#FFFF00</item>
        <item name="actionBarStyle">@style/menubarstyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="menubarstyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="menutab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#000000</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/menutabapperence</item>
        <item name="tabBackground">@color/colorPrimary</item>
    </style>

    <style name="menutabapperence" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#000000</item>
    </style>
</resources>
